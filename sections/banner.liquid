<style>
  span.banner__images--text {
    color: white;
  }
.banner img {
    width: 100%;
    max-height: 900px;
    height: 100%;
    object-fit: cover;
}
  .banner {
        max-width: 1920px;
        margin: 0 auto;
  }
  span.banner__images--text {
    display: block;
}
  h2.banner__heading {
    text-align: center;
        line-break: anywhere;
}
  .banner__images--right a, .banner__images--left a {
    width: 100%;
}
  .banner-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  text-align: center;
}
.banner__images--right img {
    max-height: 380px;
    height: 100%;
    width: 100%;
}
  .banner img{
    width: 100%;
}
  .banner__images {
    display: flex;
    column-gap: 30px;
}
  .banner__images--left {
    display: flex;
    justify-content: center;
    width: 50%;
}
.banner-btn {
    margin: 0 auto;
    display: flex!important;
    justify-content: center;
    max-width: 200px;
    width: fit-content;
}
.text__between__img {
  display: flex;
    flex-direction: column;
    width: 100%;
    text-align: center;
    align-items: center;
}
.text__between__img--title {
  width: 70%;
  text-align: center;
}
.bottom__text {
  margin-bottom: 20px
}
.text__between__img--title :first-child {
  font-size:25px;
  margin: 0;
}
.banner__images--right {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    width: 50%;
}
  .reverse-show {
    display: flex;
    flex-direction: row-reverse;
}
    @media only screen and (max-width: 768px){
    .banner__images {
      flex-direction: column;
}
      .banner__images--right, .banner__images--left {
    width: 100%;
}
    .banner__images--right {
      margin: 20px 0;
      
    }
      
  }
  .btn--outline-custom {
    color: black;
    border-color: black;
    background-color: white;
  }
  .btn--outline-custom:hover {
    color: white;
    border-color: white;
    background-color: black;
  }
</style>
<div class="banner wrapper">
  {% if section.settings.heading != blank %}
    <h2 class="banner__heading">
      {{ section.settings.heading }}
    </h2>
    {% endif %}
  <div class="banner__images {% if section.settings.reverse_show %} reverse-show {% endif %}">
    <div class="banner__images--left">
      <a href="{{ section.settings.ur_big_image }}">
        <div class="banner-text">
        <span class="banner__images--text hero__title h4">
         {{ section.settings.text_big_image }}
       </span>
        <div class="btn--outline btn--outline-custom btn--white hero__btn btn--small uppercase banner-btn"> discover
        </div>
        </div>
        <img class="{% if section.settings.zoom_first %}banner__image {% endif %}lazyautosizes ls-is-cached lazyloaded" src="{{ section.settings.big_image | img_url: "master" }}" alt="Banner" />
      </a>
    </div>
    <div class="banner__images--right">
      <div class="banner--right">
        <a href="{{ section.settings.second_url }}">
          <div class="banner-text">
          <span class="banner__images--text hero__title h4">
            {{ section.settings.second_text }}
          </span>
          <div class="btn--outline btn--outline-custom btn--white hero__btn btn--small uppercase banner-btn"> shop all
            </div>
          </div>
            <img class="{% if section.settings.zoom_second %}banner__image {% endif %}lazyautosizes ls-is-cached lazyloaded" src="{{ section.settings.second_image | img_url: "master" }}" alt="Banner" />
        </a>
      </div>
      <div class="text__between__img"> 
        <div class="text__between__img--title">
          {{ section.settings.text_btwn_img }}
        </div>
        <div class="text__between__img--title bottom__text">
          {{ section.settings.rich_text_btwn_img }}
        </div>
      </div>
      <div class="banner--right">
        <a href="{{ section.settings.third_url }}" >
          <div class="banner-text">
            <span class="banner__images--text hero__title h4">
          {{ section.settings.third_text }}
        </span>
          <div class="btn--outline btn--outline-custom btn--white hero__btn btn--small uppercase banner-btn"> shop all
          </div>
          </div>
          <img class="{% if section.settings.zoom_third %}banner__image {% endif %}lazyautosizes ls-is-cached lazyloaded" src="{{ section.settings.third_image | img_url: "master" }}" alt="Banner" />
        </a>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "reverse_show",
        "label": "Reverse show"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "big_image",
        "label": "Big Image"
      },
      {
        "type": "checkbox",
        "id": "zoom_first",
        "label": "Show zoom on hover",
        "default": true
      },
      {
        "type": "text",
        "id": "text_big_image",
        "label": "Big Image Text"
      },
      {
        "type": "url",
        "id": "ur_big_image",
        "label": "Big Image URL"
      },
      {
        "type": "image_picker",
        "id": "second_image",
        "label": "Second Image"
      },
      {
        "type": "checkbox",
        "id": "zoom_second",
        "label": "Show zoom on hover",
        "default": true
      },
      {
        "type": "text",
        "id": "text_btwn_img",
        "label": "Title text between image "
      },
      {
        "type": "richtext",
        "id": "rich_text_btwn_img",
        "label": "Description text between image"
      },
      {
        "type": "text",
        "id": "second_text",
        "label": "Second Text"
      },
      {
        "type": "url",
        "id": "second_url",
        "label": "Second URL"
      },
      {
        "type": "image_picker",
        "id": "third_image",
        "label": "Third Image"
      },
      {
        "type": "checkbox",
        "id": "zoom_third",
        "label": "Show zoom on hover",
        "default": true
      },
      {
        "type": "text",
        "id": "third_text",
        "label": "Third Text"
      },
      {
        "type": "url",
        "id": "third_url",
        "label": "Third URL"
      }
      
    ],
    "presets": [
    {
      "name": "Banner"
    }
  ]
  }
{% endschema %}

